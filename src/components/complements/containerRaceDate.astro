---
const {key, itemRaceDate} = Astro.props;
---

<div class="bg-[#d1d1d1] rounded-lg w-5/12 flex items-center">
    <span class="bg-red-500 rounded-lg text-center font-bold p-6 text-4xl"> {itemRaceDate.id} </span>
    <img src={itemRaceDate.url_flag} alt="" class="p-2 h-20 w-32 object-cover" >
    <div class="flex flex-col text-[#1b1f24] h-20 justify-center">
        <span class="block m-0 text-[10px] italic font-extrabold">{itemRaceDate.date}</span>
        <p class="block m-0 text-red-500 text-xl font-bold">{itemRaceDate.name}</p>
        <span class="block m-0 font-bold text-md">{itemRaceDate.city}</span>
    </div>
</div>