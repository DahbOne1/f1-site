---
import Title from "../components/complements/title.astro"
import Driverschampionship from "../components/complements/driverschampionship.astro"
import Teamschampionship from "./complements/teamschampionship.astro"
---

<section class="py-20 w-full text-[#d1d1d1]">
    <Title title="TABLAS DE POSICIONES" description="Consulta en tiempo real las posiciones de los pilotos y escuderías en el Campeonato Mundial de Fórmula 1"></Title>
    <article class="w-11/12 mx-auto mt-10 flex flex-col md:flex-row">
        <div class="w-full p-3 md:p-0 md:w-3/5 font-medium">
            <h3 class="text-center">MUNDIAL DE PILOTOS</h3>
            <Driverschampionship></Driverschampionship>
        </div>
        <div class="w-full p-3 md:p-0 md:w-2/5 font-medium">
            <h3 class="text-center">MUNDIAL DE CONSTRUCTORES</h3>
            <Teamschampionship></Teamschampionship>
        </div>
    </article>
</section>